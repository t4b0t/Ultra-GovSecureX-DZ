<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <Button
        android:id="@+id/btnPacketSniffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Packet Sniffer"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnNetworkScanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Scanner"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF3700B3"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSMSManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS Manager"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF03DAC5"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnRadar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radar"
        android:backgroundTint="#FFFF5722"
        android:textColor="#FFFFFF" />
</LinearLayout>
